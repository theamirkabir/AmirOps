- name: play 1 -> turning swap off persistently
  hosts: all
  remote_user: ansible

  tasks:
  - name: turn swap off
    become: yes
    shell: swapoff -a

  - name: comment out swap entry in fstab
    become: yes
    shell: sed -i '/ swap / s/^\(.*\)$/#\1/g' /etc/fstab

- name: play 2 -> switch SELinux mode from enforcing mode to permissive mode
  hosts: all
  remote_user: ansible

  tasks:
  - name: set mode enforce to 0
    become: yes
    shell: setenforce 0

  - name: set SELinux to permissive in config file
    become: yes
    shell: sed -i --follow-symlinks 's/SELINUX=enforcing/SELINUX=permissive/g' /etc/sysconfig/selinux

- name: play 3 -> configuring firewalld for k8s services
  hosts: all
  remote_user: ansible

  tasks:
  - name: allow k8s services in firewalld (tcp)
    become: yes
    ansible.posix.firewalld:
      port: "{{ item }}/tcp"
      immediate: true
      permanent: true
      state: enabled
    with_items:
    - 6443
    - 2379
    - 2380
    - 10250
    - 10251
    - 10252
    - 10257
    - 10259
    - 179

  - name: allow k8s services in firewalld (udp)
    become: yes
    ansible.posix.firewalld:
      port: "{{ item }}/udp"
      immediate: true
      permanent: true
      state: enabled
    with_items:
    - 4789

- name: play 4 -> loading kernel modules permanently and adding to containerd and configuring network kernel modules
  hosts: all
  remote_ user: ansible

  tasks:
  - name: adding kernel moduls using modprobe permamently
    become: yes
    community.general.modprobe:
      name: "{{ item }}"
      persistent: present
      state: present
    with_items:
    - br_netfilter
    - overlay

  - name: Ensure necessary kernel modules are loaded for containerd
    become: yes
    copy:
    dest: /etc/modules-load.d/containerd.conf
    content: |
      overlay
      br_netfilter

  - name: Ensure sysctl parameters are set for Kubernetes networking
    become: yes
    ansible.builtin.sysctl:
      name: net.bridge.bridge-nf-call-iptables
      value: 1
      state: present

  - name: Ensure sysctl parameters are set for Kubernetes networking (ipv4 forwarding)
    become: yes
    ansible.builtin.sysctl:
      name: ipv4.ip_forward
      value: 1
      state: present

  - name: Ensure sysctl parameters are set for Kubernetes networking (IPv6)
    become: yes
    ansible.builtin.sysctl:
      name: net.bridge.bridge-nf-call-ip6tables
      value: 1
      state: present

  - name: adding the params to the kernel
    become: yes
    shell: sysctl --system

- name: play 5 -> preparing the container runtime on nodes

  hosts: all
  remote_user: ansible
  become: yes

  tasks:
  - name: installing yum-utils
    yum:
      name: yum-utils
      state: present

  - name: Add containerd YUM repository
    ansible.builtin.yum_repository:
      name: containerd
      description: containerd Repository
      baseurl: https://download.docker.com/linux/centos/docker-ce.repo

  - name: installing containerd
    dnf:
      name: containerd.io
      state: latest

  - name: ensuring containerd has the default configs
    shell: containerd config default | sudo tee /etc/containerd/config.toml >/dev/null 2>&1

  - name: turning SystemdCgroup to true value in configs
    shell: sed -i 's/SystemdCgroup \= false/SystemdCgroup \= true/g' /etc/containerd/config.toml

  - name: restarting the services
    service:
      name: containerd
      state: restarted
      enabled: yes

- name: installing kubernetes on nodes
  hosts: all
  remote_user: ansible
  tasks:

  - name: Add Kubernetes YUM repository
    ansible.builtin.yum_repository:
      name: kubernetes
      description: Kubernetes Repository
      baseurl: hhttps://pkgs.k8s.io/core:/stable:/v1.30/rpm/
      gpgcheck: yes
      gpgkey: https://pkgs.k8s.io/core:/stable:/v1.29/rpm/repodata/repomd.xml.key
      enabled: yes
  - name: Install kubelet, kubeadm, and kubectl
    ansible.builtin.yum:
      name:
      - kubelet
      - kubeadm
      - kubectl
      state: latest

  - name: Enable and start kubelet
    service:
      name: kubelet
      enabled: yes
      state: started
